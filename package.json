{
  "name": "padmakara-api",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:admin": "cd admin && bunx vite",
    "start": "bun run src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "bunx tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun run src/scripts/seed-from-csv.ts",
    "db:seed-content": "bun run src/scripts/seed-content.ts",
    "migrate:wix": "bun run src/scripts/migrate-from-wix.ts"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.9",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@aws-sdk/client-lambda": "^3.990.0",
    "@aws-sdk/client-s3": "^3.988.0",
    "@aws-sdk/lib-storage": "^3.990.0",
    "@aws-sdk/s3-request-presigner": "^3.988.0",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "csv-parse": "^6.1.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "music-metadata": "^11.12.1",
    "pdf-lib": "^1.17.1",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  }
}
